<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.peaceful.cron.server.modal.CronDispatchMapper">

    <select id="select" resultType="com.peaceful.cron.server.modal.CronDispatch">
        SELECT * FROM cron_dispatch
        <where>
            <if test="name != null">
                AND `name` = #{name}
            </if>
            <if test="status != null">
                and `status` = #{status}
            </if>
            <if test="dispatchTime != null">
                AND `dispatch_time` &lt;= #{dispatchTime}
            </if>
            <if test="completeTime != null">
                AND `completeTime` &lt;= #{completeTime} ,
            </if>
        </where>
        ORDER BY  id DESC
    </select>

    <update id="update">
        UPDATE cron_dispatch
        <set>
            <if test="status != null">
                `status` = #{status} ,
            </if>
            <if test="completeTime != null">
                `complete_time` = #{completeTime} ,
            </if>
        </set>
        WHERE `id` = #{id}
    </update>
</mapper>


