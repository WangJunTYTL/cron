#parse("/static/vm/public/head.vm")

<div class="row">
    <div class="col-lg-12 border-bottom">
        <h2>服务登记</h2>
    </div>
</div>
<br>
<div class="row animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="name" class="col-sm-2 control-label">服务标识</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="name" id="name"
                               placeholder="服务唯一标识，命名请使用字母，多个单词间可以用点号连接">
                    </div>
                </div>
                <div class="form-group">
                    <label for="comment"
                           class="col-sm-2 control-label">服务描述</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="comment"
                               id="comment" placeholder="用简单的话概括你的服务用途">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button class="btn btn-primary" id="submitMenu">提交</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

#parse("/static/vm/public/foot.vm")
<script src="/js/cron/serviceRegistry.js"></script>